{
    "compilerOptions": {
        "target": "es5", // 컴파일된 JavaScript 버전
        "module": "commonjs", // 모듈 형식
        "lib": ["es6", "dom"], // 사용할 라이브러리
        "strict": true, // 엄격한 타입 체크 모드 활성화
        "esModuleInterop": true, // commonJS 모듈을 ES6로 import
        "skipLibCheck": true, // 라이브러리 파일 타입 체크를 건너뜀
        "forceConsistentCasingInFileNames": true, // 파일명 대소문자 일관성 강제
        "resolveJsonModule": true, // .json 모듈을 import하여 사용 가능하도록 함
        "jsx": "react", // JSX 사용을 위해 react 설정
        "sourceMap": true, // 소스 맵 파일 생성
        "outDir": "./dist", // 컴파일 결과물 디렉토리
        "rootDir": "./src" // TypeScript 소스 파일 디렉토리
    },
    "include": ["src"], // 타입스크립트 파일이 위치한 디렉토리
    "exclude": ["node_modules", "dist"] // 제외할 디렉토리
}
